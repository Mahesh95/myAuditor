<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transaction_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:text="12.7.25"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transaction_card_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:text="500"
            android:textSize="21sp" />

        <View
            android:id="@+id/transaction_card_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/transaction_card_date"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/transaction_card_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/transaction_card_divider"
            android:layout_margin="8dp"
            android:text="category"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/transaction_card_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/transaction_card_divider"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/transaction_card_category"
            android:text="Hello"
            android:textSize="17sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>